{
  "name": "natours",
  "version": "1.0.0",
  "description": "Improving my css Skills",
  "main": "index.js",
  "scripts": {
    "comp": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel comp",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "autoprefixer-cli -o css/style.prefix.css css/style.concat.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afozbek/Natours.git"
  },
  "author": "Furkan Ozbek",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/afozbek/Natours/issues"
  },
  "homepage": "https://github.com/afozbek/Natours#readme",
  "devDependencies": {
    "autoprefixer": "^9.4.2",
    "concat": "^1.0.3",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1"
  }
}